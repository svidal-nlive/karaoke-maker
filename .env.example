# User/Group IDs
PUID=1000
PGID=1000

# Cloudflare Tunnel Token
# Create a new tunnel in Cloudflare Zero Trust Dashboard > Networks > Tunnels
# and copy the token from the Docker run command shown in the setup
CF_TOKEN=your_cloudflare_tunnel_token_here

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# API
API_PORT=5000
API_BASE_URL=https://example.com/api
JWT_SECRET=your_jwt_secret_here
ADMIN_PASSWORD=your_admin_password_here
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Logging
LOG_LEVEL=INFO

# Watcher Configuration
CHECK_INTERVAL=5  # seconds

# Pipeline Directories
INPUT_DIR=/input
QUEUE_DIR=/queue
STEMS_DIR=/stems
METADATA_DIR=/metadata
OUTPUT_DIR=/output
ARCHIVE_DIR=/archive
LOG_DIR=/logs

# Splitter Configuration
SPLITTER_TYPE=SPLEETER
STEMS=4
STEM_TYPE=vocals,drums,bass,other
CLEAN_INTERMEDIATE_STEMS=false

# Chunking Configuration (for long audio files)
CHUNKING_ENABLED=false
CHUNK_LENGTH_MS=240000
MIN_CHUNK_LENGTH_MS=120000
CHUNK_MAX_ATTEMPTS=4

# Pipeline Processing
CLEAN_INTERMEDIATE=true
MAX_RETRIES=3
RETRY_DELAY=10
REDIS_RETRY_DELAY=5

# Metadata
FETCH_COVER_ART=true
COVER_ART_API=https://musicbrainz.org/ws/2/

# Cloudflare Tunnel
TUNNEL_TOKEN=your_tunnel_token_here

# Notifications (optional)
#TELEGRAM_BOT_TOKEN=your_telegram_bot_token
#TELEGRAM_CHAT_ID=your_telegram_chat_id
#SLACK_WEBHOOK_URL=your_slack_webhook_url
#NOTIFY_EMAILS=email1@example.com,email2@example.com
#SMTP_SERVER=smtp.example.com
#SMTP_PORT=587
#SMTP_USERNAME=your_smtp_username
#SMTP_PASSWORD=your_smtp_password
